# Windsurf Release Monitor Configuration
# Copy this file to .env and fill in your values

# ===== REQUIRED SETTINGS =====
# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Channel ID (use @userinfobot to get channel ID)
# Format: @channelname or -1001234567890
TELEGRAM_CHANNEL_ID=@your_channel_here

# ===== OPTIONAL SETTINGS =====
# Telegram Admin User IDs (comma-separated, for error notifications)
# Get your user ID from @userinfobot
TELEGRAM_ADMIN_IDS=123456789,987654321

# Monitoring Configuration
CHECK_INTERVAL_MINUTES=30
MAX_RETRIES=3
REQUEST_TIMEOUT_MS=30000
REQUEST_DELAY_MS=1000

# Storage Configuration
VERSIONS_FILE=./data/versions.json
LOG_FILE=./logs/app.log

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
TZ=UTC

# GitHub Actions (automatically set)
# GITHUB_RUN_ID=
# GITHUB_REPOSITORY=
# GITHUB_ACTOR=
